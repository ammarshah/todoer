<div class="form-container">
  <h1 id="title" class="center">Change Password</h1>

  <%= form_with(model: resource, url: registration_path(resource_name), method: :put) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= form.email_field :email, autofocus: true, autocomplete: "email", disabled: true %>
    </div>

    <div class="field">
      <%= form.password_field :current_password, autocomplete: "current-password", placeholder: "Current password" %>
    </div>

    <div class="field">
      <%= form.password_field :password, autocomplete: "new-password", placeholder: "New password" %>
    </div>

    <div class="field">
      <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Retype new password" %>
    </div>

    <div class="actions">
      <%= form.submit "Save" %>
    </div>
  <% end %>

  <div id="danger-zone" class="mr-top">
    <strong>Delete my account</strong>
    <p>Once you delete your account, there is no going back. Please be certain.</p>

    <div class="field">
      <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "This action cannot be undone. Are you sure?", turbo_confirm: "This action cannot be undone. Are you sure?" }, method: :delete, class: "delete" %>
    </div>
  </div>

  <div class="center mr-top mr-bottom">
    <%= link_to "Back", root_path %>
  </div>
</div>
