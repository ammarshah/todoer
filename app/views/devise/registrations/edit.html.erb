<div class="form-container mr-bottom">
  <div id="update_account">
    <h1 class="title center">Update Account</h1>

    <%= form_with(model: resource, url: registration_path(resource_name), method: :put) do |form| %>
      <%= render "error_messages", resource: resource, attributes: [:email, :full_name] %>

      <div class="field">
        <%= form.email_field :email, disabled: true %>
      </div>

      <div class="field">
        <%= form.text_field :full_name, autocomplete: "name", placeholder: "Full name" %>
      </div>

      <div class="actions">
        <%= form.submit "Save" %>
      </div>
    <% end %>
  </div>

  <div id="change_password">
    <h1 class="title center">Change Password</h1>

    <%= form_with(model: resource, url: registration_path(resource_name), method: :put) do |form| %>
      <%= render "error_messages", resource: resource, attributes: [:current_password, :password, :password_confirmation] %>

      <div class="field">
        <%= form.password_field :current_password, autocomplete: "current-password", placeholder: "Current password" %>
      </div>

      <div class="field">
        <%= form.password_field :password, autocomplete: "new-password", placeholder: "New password" %>
      </div>

      <div class="field">
        <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Retype new password" %>
      </div>

      <div class="actions">
        <%= form.submit "Save" %>
      </div>
    <% end %>
  </div>

  <div class="danger-zone mr-top mr-bottom">
    <strong>Delete my account</strong>

    <p>Once you delete your account, all of your todos will be gone and you will no longer be considered a <strong>Todoer</strong>.</p>

    <p>So, please ask yourself again whether you can carry this burden for the rest of your life?</p>

    <div class="field">
      <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "This action cannot be undone. Are you sure?", turbo_confirm: "This action cannot be undone. Are you sure?" }, method: :delete, class: "danger" %>
    </div>
  </div>
</div>
