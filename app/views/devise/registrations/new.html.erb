<div class="form-container">
  <h1 class="center">Register</h1>

  <%= form_with(model: resource, url: registration_path(resource_name)) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= form.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
    </div>

    <div class="actions">
      <%= form.submit "Continue" %>
    </div>
  <% end %>

  <div class="link center">
    Already registered?
    <%= link_to "Login", new_session_path(resource_name) %>
  </div>
</div>
