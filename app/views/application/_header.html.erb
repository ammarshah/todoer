<header>
  <div id="logo">
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path do %>
        <%= image_tag "account.svg", alt: "Account", size: "28x28" %>
      <% end %>
    <% else %>
      <%= link_to root_path do %>
        <%= image_tag "logo.png", alt: "Logo", size: "80x80" %>
      <% end %>
    <% end %>
  </div>

  <%# <div class="tagline center">
    <p>Let's get things TODOed</p>
  </div> %>

  <div id="nav-link">
    <% if user_signed_in? %>
      <%= link_to logout_path, data: { turbo_method: :delete } do %>
        <%= image_tag "logout.svg", size: "28x28" %>
      <% end %>
    <% else %>
      <%= link_to login_path do %>
        <%= image_tag "login.svg", size: "28x28" %>
      <% end %>
    <% end %>
  </div>
</header>
